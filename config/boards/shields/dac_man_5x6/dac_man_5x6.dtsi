#include <physical_layouts.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        zmk,physical-layout = &physical_layout0;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Dactyl Manuform 4x6";
        transform = <&default_transform>;
        kscan = <&kscan0>;
        
        // (I kept your keys list shortened here for brevity, 
        // but you can keep your long list of keys if you want the visualizer to work)
        keys = <&key_physical_attrs 100 100 0 0 0 0 0>; 
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>; 
        
        map = <
        // ROW 1: Top Alpha (QWERTY...)
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
        
        // ROW 2: Home Row (ASDF...)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)    RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
        
        // ROW 3: Bottom Row (ZXCV...)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)    RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
        
        // THUMBS & PARTIALS
                                RC(3,2) RC(3,3)                    RC(3,9) RC(3,8)
                        RC(3,4) RC(3,5) RC(4,3)    RC(4,9) RC(3,11) RC(4,4)
                        RC(4,5) RC(4,11) RC(4,10)
        >;
    };

    // --- ADDED THIS BLOCK TO FIX THE ERROR ---
    &kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        // We define the PINS in the overlay, but the object must exist here.
    };
};
